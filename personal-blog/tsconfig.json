{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@/server/*": ["./server/*"],
      "@/frontend/*": ["./frontend/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./frontend" },
    { "path": "./server" },
    { "path": "./shared" }
  ]
}
